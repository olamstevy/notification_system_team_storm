generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id         String   @id @default(uuid())
  code       String
  language   String   @default("en")
  subject    String?
  body    String
  version    Int      @default(1)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([code, version])
}
